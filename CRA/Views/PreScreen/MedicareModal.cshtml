<div class="modal fade" id="medicareModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title inline">Medicare Admission Status</h2>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-xs-12">
                        <label class="control-label col-xs-12">
                            Status <span class="separator-right-2x"></span>
                            <input type="radio" name="admissionStatus1" data-bind="checked:data.workflow.admissionStatus" value="Pre Admit" /><span class="inline separator-right-2x">Pre Admit</span>
                            <input type="radio" name="admissionStatus1" data-bind="checked:data.workflow.admissionStatus" value="Denial" /><span class="inline separator-right-2x">Denial</span>
                            <input type="radio" name="admissionStatus1" data-bind="checked:data.workflow.admissionStatus" value="Non Admit" /><span class="inline separator-right-2x">Non Admit</span>
                        </label>
                    </div>

                </div>
                <div class="row">
                    <div class="col-xs-12"></div>
                </div>


                <div class="row" data-bind="css:{hide:data.workflow.admissionStatus()!='Denial'}">
                    <div class="col-xs-12">
                        <label class="control-label col-xs-12">
                            Denial Reason <span class="separator-right-2x"></span>
                            @Html.Partial("DenialSelect")
                        </label>
                    </div>

                </div>

                <div class="row" data-bind="css:{hide:data.workflow.admissionStatus()!='Denial'}">
                    <div class="col-xs-12"></div>
                </div>




                <div class="row" data-bind="css:{hide:data.workflow.admissionStatus()!='Non Admit'}">
                    <div class="col-xs-12">
                        <label class="control-label col-xs-12">
                            Non Admit Reason <span class="separator-right-2x"></span>
                            @Html.Partial("NonAdmitSelect")
                        </label>
                    </div>

                </div>

                <div class="row" data-bind="css:{hide:data.workflow.admissionStatus()!='Non Admit'}">
                    <div class="col-xs-12"></div>
                </div>

















                <div class="row">
                    <div class="col-xs-12">
                        <label class="control-label col-xs-12">
                            Notes
                            <textarea class="form-control col-xs-12" rows="5" data-bind="value:data.workflow.medicareNotes"></textarea>
                        </label>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:data.setMedicareStatus">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>